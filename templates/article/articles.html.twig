{% extends 'base.html.twig' %}

{% block title %}Artyku≈Çy{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h1>Title: {{ article.title }}</h1>
                <h2>Posted: {{ article.publishedAt|ago }}</h2>
                <h2>Heart count: {{ article.heartCount }}</h2>
                <div>{{ article.content}}</div>

                <h3>Comments</h3>
                {% for comment in article.nonDeletedComments %}
                <div>
                    {{ comment. }}
                </div>
                {% enfor %}
            </div>
        </div>
    </div>
{% endblock %}
